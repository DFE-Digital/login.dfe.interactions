<a href="<%=locals.redirectUri%>" class="govuk-back-link">Back</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Forgotten your password?
        </h1>
        <p class="govuk-body-l">Enter the email address you have registered for DfE Sign-in.</p>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <form method="post" id="form-reset-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <input type="hidden" name="clientId" value="<%=locals.clientId%>" />
            <input type="hidden" name="redirectUri" value="<%=locals.redirectUri%>" />
            <div class="govuk-form-group <%=  locals.validationMessages.email !== undefined ? 'govuk-form-group--error' : '' %>">
                <label class="govuk-label govuk-label--s" for="email">Email address</label>
                <% if (locals.validationMessages.email !== undefined) { %>
                <p class="error-message" id="validation-email"><%= locals.validationMessages.email %></p>
                <% } %>
                <input class="govuk-input govuk-!-width-one-half" id="email" name="email" type="email" value="<%=email%>" <% if (locals.validationMessages.email !== undefined) { %> aria-invalid="true" aria-describedby="validation-email" <% } %>>
            </div>
            <div class="form-submit submit-buttons">
                <button type="submit" class="govuk-button">Continue</button>
            </div>
        </form>
    </div>
</div>
