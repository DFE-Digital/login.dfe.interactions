<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Create password</h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <p class="govuk-body-l">Enter a new password for your DfE Sign-in account.</p>
        <form method="post" id="form-reset-your-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <input type="hidden" name="emailConfId" value="<%=locals.emailConfId%>" />
            <div class="govuk-form-group <%= locals.validationMessages.newPassword !== undefined ? 'govuk-form-group--error' : '' %>">
                <label class="govuk-label govuk-label--s" for="newPassword">Password</label>
                <p class="govuk-label__hint">Your password must be at least 12 characters</p>
                <% if (locals.validationMessages.newPassword !== undefined) { %>
                    <span id="validation-new-password" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> <%= locals.validationMessages.newPassword %>
                    </span>
                <% } %>
                <div class="show-password">
                    <input data-label="password" class="form-control" id="newPassword" name="newPassword" type="password" value="<%=newPassword%>"
                           pattern=".{12,64}$" autocomplete="off"
                            <% if (locals.validationMessages.newPassword !== undefined) { %> aria-invalid="true" aria-describedby="validation-new-password" <% } %>>
                </div>
            </div>
            <div class="govuk-form-group <%= locals.validationMessages.confirmPassword !== undefined ? 'govuk-form-group--error' : '' %>">
                <label class="govuk-label govuk-label--s" for="confirmPassword">Confirm password</label>
                <% if (locals.validationMessages.confirmPassword !== undefined) { %>
                    <span id="validation-confirm-password" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.confirmPassword %>
                    </span>
                <% } %>
                <div class="show-password">
                    <input data-label="password" class="form-control" id="confirmPassword" name="confirmPassword" type="password" value="<%=confirmPassword%>"
                           pattern=".{12,64}$" autocomplete="off"
                            <% if (locals.validationMessages.confirmPassword !== undefined) { %> aria-invalid="true" aria-describedby="validation-confirm-password" <% } %>>
                </div>
            </div>

            <button type="submit" class="govuk-button">Save</button>

        </form>
    </div>
</div>